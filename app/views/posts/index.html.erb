<div class="class container">

  <h1>Post publicados en el blog </h1>

    <table class="table table-striped">
      <thead>
        <th>Autor</th>
        <th>Título</th>
        <th>Contenido</th>
        <th>Opciones</th>
      </thead>

      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.author %></td>
            <td><%= post.title %></td>
            <td><%= post.content %></td>
            <td>
              <%= link_to 'view', post %>-  <!-- lo que se ve es post_path (id: post.id) -->
              <%= link_to 'edit', edit_post_path(post) %>
              <%= link_to 'eliminar', post, method: :delete, data:{confirm: '¿Estás seguro de eliminar este post?'} %>
            </td>
          </tr>
        <% end %>
      </tbody>

    </table>
</div>
<%= link_to 'New Post', new_post_path %>
